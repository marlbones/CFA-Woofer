<p id="notice"><%= notice %></p>



<h1>Woofer Feed</h1>
<h2><%= @user.email %></h2>
<%= link_to 'Sign out', destroy_user_session_path, method: :delete %>

<h1>Barks</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.content %></td>
        <td><%= post.user.email %></td>
        <td><%= link_to 'Show', post %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Create New Bark', new_post_path %>
